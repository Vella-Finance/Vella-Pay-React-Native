{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": false,
    "declarationMap": true,
    "allowJs": true,
    "jsx": "react-native",
    "lib": [ "es2015", "dom","ESNext" ],
    "module": "CommonJS",
    "noEmitOnError": true,
    "outDir": "lib",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "typeRoots": ["lib/types"]
  },
  "exclude": ["**/__tests__/*"],
  "include": ["src/**/*"]
}
